<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitone.saldometro.controller" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.bitone.saldometro.controller.MainActivity" />

        <activity
            android:name=".ElegirTarjetaActivity"
            android:label="@string/title_activity_elegir_tarjeta"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AgregarSaldoActivity"
            android:label="@string/title_activity_agregar_saldo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MarcarViajeActivity"
            android:label="@string/title_activity_marcar_viaje"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".HorarioActivity"
            android:label="Horario"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InformacionEstacionActivity"
            android:label="Horario"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".EstacionMapsActivity"
            android:label="@string/title_activity_estacion_maps" >

        </activity>
    </application>

</manifest>
