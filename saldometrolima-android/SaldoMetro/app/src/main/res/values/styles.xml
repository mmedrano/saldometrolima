<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:radioButtonStyle">@style/RadioButtonMetro</item>
    </style>

    <style name="RadioButtonMetro" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_button_metro</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#1487E4</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#006400</item>
    </style>

    <style name="DividerTarjeta">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#006400</item>
    </style>

    <style name="padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="listitemdefault">
        <item name="android:background">@color/negro_metro_default</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="TextNormalStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/texto_blanco</item>
    </style>

    <style name="TextValorSaldoViaje">
        <item name="android:textColor">@color/texto_blanco</item>
    </style>

    <style name="TextMetroBlack">
        <item name="android:textColor">@color/negro</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/button_metro_text_color</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="buttonListItem">
        <item name="android:background">@drawable/button_metro_black</item>
    </style>

</resources>
