<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitone.saldometro.controller.AgregarSaldoActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_metro_lima"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        style="@style/padding">


        <LinearLayout
            android:background="#de07b209"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/TextValorSaldoViaje"
                android:text="@string/saldo"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvSaldoIncorrecto"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TextValorSaldoViaje"
                android:text="@string/tsaldo"
                android:textSize="20sp"/>
        </LinearLayout>
        <View style="@style/Divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:background="#dc000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/mensaje_calcularviaje"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextValorSaldoViaje"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#dc000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="25sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHora"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Hora"/>
                <TextView
                    android:id="@+id/tvHoraViaje"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="@string/hora_viaje"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:background="#dc000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="25sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="Estación origen"
                    android:textSize="15sp"/>
                <Spinner
                    android:background="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerEstacionOri"
                    android:layout_weight="1" />

            </LinearLayout>
            <LinearLayout
                android:background="#dc000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="25sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="Estación destino"
                    android:textSize="15sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="@string/hora_viaje"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:background="#dc000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="25sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="Hora próxima"
                    android:textSize="15sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="@string/hora_viaje"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:background="#dc000000"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="25sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="Hora llegada"
                    android:textSize="15sp"/>
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="@string/hora_viaje"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>
