<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_metro_lima"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/padding">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="2">
            <TextView
                android:id="@+id/tvDireccionBayovar"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:text="Dirección a Bayóvar"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@color/fondo_metro"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvDireccionVilla"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:text="Dirección a V. E. S."
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@color/fondo_metro"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="10">
            <ListView android:id="@+id/LstHorarioABayovar"
                android:background="@color/negro_metro_default"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>

            <ListView android:id="@+id/LstHorarioAVilla"
                android:background="@color/negro_metro_default"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>