<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitone.saldometro.controller.AgregarSaldoActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_metro_lima"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/padding">
        <LinearLayout
            android:background="#de07b209"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:text="@string/saldo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/TextValorSaldoViaje"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tvSaldoActual"
                android:text="@string/tsaldo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                style="@style/TextValorSaldoViaje"
                android:textSize="20sp"/>
        </LinearLayout>
        <View style="@style/Divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:background="@color/negro_metro_default"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="25sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">
                <TextView
                    android:text="@string/monto_maximo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextValorSaldoViaje"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tvMontoMaximo"
                    android:text="@string/tsaldo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextValorSaldoViaje"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/negro_metro_default"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/TextValorSaldoViaje"
                    android:text="@string/cantidad"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/txtCredito"
                    android:background="@android:drawable/edit_text"
                    android:gravity="center"
                    android:hint="@string/monto"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
            <Button
                android:id="@+id/btnAgregar"
                android:background="@drawable/button_metro"
                android:text="@string/as"
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
