<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_metro_lima"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/padding">

        <LinearLayout
            android:background="@color/negro_metro_default"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/fondo_metro"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="DISTRITO"
                    android:textColor="@color/texto_blanco"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="UBICACIÓN"
                    android:textColor="@color/texto_blanco"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingLeft="20sp"
                android:paddingRight="20sp">
                <TextView android:id="@+id/tvDistrito"
                    android:textColor="@color/texto_blanco"
                    android:gravity="left"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Distrito"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <TextView android:id="@+id/tvUbicacion"
                    android:textColor="@color/texto_blanco"
                    android:gravity="center"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:background="@color/fondo_metro"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="DURACIÓN DE VIAJE A OTRAS ESTACIONES"
                    android:textColor="@color/texto_blanco"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <ListView android:id="@+id/LstCalculoViaje"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="5"/>


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
